{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "SQL Server",
  "configuration-groups": [
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "SQL Server"
          }
        },
        {
          "widget-type": "plugin-list",
          "label": "JDBC Driver name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "plugin-type": "jdbc"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "1433"
          }
        },
        {
          "label": "Authentication Type",
          "name": "authenticationType",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "SQL Login",
            "options": [
              {
                "id": "SQL Login",
                "label": "SQL Login"
              },
              {
                "id": "ActiveDirectoryPassword",
                "label": "Active Directory Password"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter" : "=",
            "delimiter" : ";"
          }
        }
      ]
    },
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage. Typically, the name of the table/view."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "connection-browser",
          "widget-category": "plugin",
          "widget-attributes": {
            "connectionType": "SQL Server",
            "label": "Browse Database"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "tableName"
        },
        {
          "widget-type": "textbox",
          "label": "Schema Name",
          "name": "dbSchemaName"
        },
        {
          "widget-type": "hidden",
          "label": "Operation Name",
          "name": "operationName",
          "widget-attributes" : {
            "default": "insert"
          }
        },
        {
          "widget-type": "hidden",
          "label": "Table Key",
          "name": "relationTableKey"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Instance Name",
          "name": "instanceName"
        },
        {
          "widget-type": "number",
          "label": "Query Timeout",
          "name": "queryTimeout",
          "widget-attributes": {
            "default": "-1"
          }
        },
        {
          "widget-type": "number",
          "label": "Connect Timeout",
          "name": "loginTimeout",
          "widget-attributes": {
            "default": "0"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Column Encryption",
          "name": "columnEncryptionSetting",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Enabled"
            },
            "off": {
              "value": "false",
              "label": "Disabled"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Encrypt",
          "name": "encrypt",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Trust Server Certificate",
          "name": "trustServerCertificate",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Workstation ID",
          "name": "workstationID"
        },
        {
          "widget-type": "textbox",
          "label": "Failover Partner",
          "name": "failoverPartner"
        },
        {
          "widget-type": "number",
          "label": "Packet Size",
          "name": "packetSize",
          "widget-attributes": {
            "default": "-1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Current Language",
          "name": "currentLanguage"
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "jdbcPluginName"
        },
        {
          "type": "property",
          "name": "authenticationType"
        },
        {
          "type": "property",
          "name": "user"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "host"
        },
        {
          "type": "property",
          "name": "port"
        },
        {
          "type": "property",
          "name": "connectionArguments"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
