{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "MySQL",
  "configuration-groups": [
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "MySQL"
          }
        },
        {
          "widget-type": "plugin-list",
          "label": "JDBC Driver name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "plugin-type": "jdbc"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "3306"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter" : "=",
            "delimiter" : ";"
          }
        }
      ]
    },
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "connection-browser",
          "widget-category": "plugin",
          "widget-attributes": {
            "connectionType": "MySQL",
            "label": "Browse Database"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "tableName"
        },
        {
          "widget-type": "keyvalue",
          "label": "Field Mappings",
          "name": "fieldMappings",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Column name in input schema",
            "value-placeholder": "Column name in DB Table",
            "kv-delimiter" : "=",
            "delimiter" : ";"
          }
        },
        {
          "widget-type": "hidden",
          "label": "Schema Name",
          "name": "dbSchemaName"
        }
      ]
    },
    {
      "label": "SSL",
      "properties": [
        {
          "label": "Use SSL",
          "name": "useSSL",
          "widget-type": "select",
          "widget-attributes": {
            "default": "If available",
            "values": ["If available", "Yes", "No"]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Keystore URL",
          "name": "clientCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Keystore Password",
          "name": "clientCertificateKeyStorePassword"
        },
        {
          "widget-type": "textbox",
          "label": "Truststore URL",
          "name": "trustCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Truststore Password",
          "name": "trustCertificateKeyStorePassword"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use Compression",
          "name": "useCompression",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "SQL_MODE",
          "name": "sqlMode"
        },
        {
          "widget-type": "toggle",
          "label": "Auto Reconnect",
          "name": "autoReconnect",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "jdbcPluginName"
        },
        {
          "type": "property",
          "name": "user"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "host"
        },
        {
          "type": "property",
          "name": "port"
        },
        {
          "type": "property",
          "name": "connectionArguments"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
