{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Oracle",
  "configuration-groups": [
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "hidden",
          "name": "useConnection",
          "widget-attributes": {
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Oracle"
          }
        },
        {
          "widget-type": "plugin-list",
          "label": "JDBC Driver name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "plugin-type": "jdbc"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "1521"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "label": "Role",
          "name": "role",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "normal",
            "options": [
              {
                "id": "normal",
                "label": "Normal"
              },
              {
                "id": "sysdba",
                "label": "SYSDBA"
              },
              {
                "id": "sysoper",
                "label": "SYSOPER"
              }
            ]
          }
        },
        {
          "name": "connectionType",
          "label": "Connection Type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "SID",
            "options": [
              {
                "id": "SID",
                "label": "SID"
              },
              {
                "id": "service",
                "label": "Service Name"
              },
              {
                "id": "TNS",
                "label": "TNS Connect Descriptor"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "SID/Service Name/TNS Connect Descriptor",
          "description": "Oracle connection point (Database name, Service name, or TNS Connect Descriptor)",
          "name": "database"
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter" : "=",
            "delimiter" : ";"
          }
        }
      ]
    },
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage"
          }
        },
        {
          "widget-type": "connection-browser",
          "widget-category": "plugin",
          "widget-attributes": {
            "connectionType": "Oracle",
            "label": "Browse Database"
          }
        },
        {
          "widget-type": "get-schema",
          "widget-category": "plugin"
        },
        {
          "widget-type": "textarea",
          "label": "Import Query",
          "name": "importQuery",
          "widget-attributes": {
            "rows": "4"
          }
        },
        {
          "widget-type": "textarea",
          "label": "Bounding Query",
          "name": "boundingQuery",
          "widget-attributes": {
            "rows": "4"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Split-By Field Name",
          "name": "splitBy"
        },
        {
          "widget-type": "textbox",
          "label": "Number of Splits to Generate",
          "name": "numSplits",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "number",
          "label": "Fetch Size",
          "name": "fetchSize",
          "widget-attributes": {
            "default": "1000",
            "minimum": "0"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "number",
          "label": "Default Batch Value",
          "name": "defaultBatchValue",
          "widget-attributes": {
            "default": "10",
            "min": "1"
          }
        },
        {
          "widget-type": "number",
          "label": "Default Row Prefetch",
          "name": "defaultRowPrefetch",
          "widget-attributes": {
            "default": "40",
            "min": "1"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "jdbcPluginName"
        },
        {
          "type": "property",
          "name": "user"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "host"
        },
        {
          "type": "property",
          "name": "port"
        },
        {
          "type": "property",
          "name": "role"
        },
        {
          "type": "property",
          "name": "connectionType"
        },
        {
          "type": "property",
          "name": "connectionArguments"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
