{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Jethro Post Action",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "select",
          "label": "Run Condition",
          "name": "runCondition",
          "widget-attributes": {
            "values": [
              "completion",
              "success",
              "failure"
            ],
            "default": "success"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Driver Name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "default": "jethro"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "9111"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Instance",
          "name": "database"
        },
        {
          "widget-type": "textarea",
          "label": "Query",
          "name": "query",
          "widget-attributes": {
            "rows": "4"
          }
        },
        {
          "widget-type": "hidden",
          "name": "connectionArguments"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    }
  ]
}
